---
import { SITE_TITLE } from "../consts";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

// Determine the current language based on the URL or default to 'en'
const lang = getLangFromUrl(Astro.url) || 'en';
const t = useTranslations(lang); // Get translations for the current language

// Define routes for privacy and terms pages based on the current language
const privacySlug = `/${lang}/about/privacy`;
const termsSlug = `/${lang}/about/terms`;
const contactSlug = `/${lang}/contact`;

// Get the current year for copyright text
const currentYear = new Date().getFullYear();
---

<footer class="bg-sky-950 text-gray-300 py-10">
  <div class="container mx-auto px-6 flex flex-col items-center space-y-6">
    
    <!-- Footer Links -->
    <div class="flex flex-wrap justify-center space-x-6 text-xl text-white">
      <a href={privacySlug} class="hover:text-blue-500 text-white transition-colors">
        {t("footer.privacy")} <!-- Privacy Policy -->
      </a>
      <a href={termsSlug} class="hover:text-blue-500 text-white transition-colors">
        {t("footer.terms")} <!-- Terms of Service -->
      </a>
      <a href={contactSlug} class="hover:text-blue-500 text-white transition-colors">
        {t("footer.contact")} <!-- Contact Us -->
      </a>
    </div>
    
    <!-- Social Links -->
    <div class="flex space-x-6">
      <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" class="hover:text-blue-500 text-white transition-colors">
        Facebook
      </a>
      <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="hover:text-blue-500 text-white transition-colors">
        Twitter
      </a>
      <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="hover:text-blue-500 text-white transition-colors">
        Instagram
      </a>
      <!-- Add more social links as needed -->
    </div>
    
    <!-- Copyright -->
    <div class="text-center text-xl text-gray-500 mt-4">
      &copy; {currentYear} {SITE_TITLE}. {t("footer.rights")}
    </div>
  </div>
</footer>
